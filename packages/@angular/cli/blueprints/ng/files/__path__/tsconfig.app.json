{<% if (ng4) { %>
  "extends": "<%= relativeRootPath %>/tsconfig.json",
  "compilerOptions": {
  "lib": [
    "es2016",
    "dom"
  ],<% } else { %>
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "dom"
    ],<% } %>
    "outDir": "<%= relativeRootPath %>/out-tsc/app",
    "target": "es5",
    "module": "es6",
    "baseUrl": "",
    "types": [],
    "typeRoots": [
    "../node_modules/@types"
    ]
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
