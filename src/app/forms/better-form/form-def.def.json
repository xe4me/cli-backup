{
    "id": "Application",
    "fdnClassPath": "src/app/forms/better-form",
    "fdnModelPath": "src/app/forms/better-form",
    "version": "0.0.1",
    "path": "/application",
    "status": "NEW",
    "blocks": [
        {
            "blockType": "DetailsPage",
            "name": "Application",
            "blockLayout": "PAGE",
            "commonBlock": false,
            "path": "pages/details-page",
            "page": {
                "pageId": null,
                "nextPageId": null,
                "prevPageId": null,
                "routeName": "ApplicationFormComponent"
            },
            "blocks": [
                {
                    "name": "Welcome",
                    "blockType": "WelcomeBlockComponent",
                    "blockLayout": "INLINE",
                    "commonBlock": false,
                    "path": "blocks/welcome/welcome-block.component",
                    "custom": {
                        "controls": [
                            {
                                "id": "NewOrExisting"
                            }
                        ],
                        "optionalBlocks": [
                            {
                                "name": "ContinueApplicationBlock",
                                "blockType": "ContinueApplicationBlock",
                                "blockLayout": "INLINE",
                                "commonBlock": false,
                                "path": "blocks/continue-application/continue-application.component",
                                "custom": {
                                    "blockTitle": "Where did we leave off?",
                                    "controls": [
                                        {
                                            "id": "ExistingApplicationId"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                {
                    "blockType": "MenuFrameBlockComponent",
                    "blockLayout": "INLINE",
                    "commonBlock": false,
                    "path": "blocks/menu-frame/menu-frame.component",
                    "blocks": [
                        {
                            "name": "SingleOrJoint",
                            "blockType": "SingleOrJointBlockComponent",
                            "blockLayout": "INLINE",
                            "commonBlock": false,
                            "path": "blocks/single-or-joint/single-or-joint-block.component",
                            "custom": {
                                "blockTitle": "Just for you or with someone else?",
                                "controls": [
                                    {
                                        "id": "SingleOrJoint"
                                    }
                                ]
                            }
                        },
                        {
                            "name": "BetterChoice",
                            "blockType": "BetterChoiceBlock",
                            "blockLayout": "INLINE",
                            "commonBlock": false,
                            "path": "blocks/better-choice/better-choice.component",
                            "custom": {
                                "blockTitle": "How can we make your life Bett3r?",
                                "controls": [
                                    {
                                        "id": "BetterChoice",
                                        "buttons": [
                                            {
                                                "id": "new_deposit_account",
                                                "value": "new_deposit_account",
                                                "label_single": "I would like to set up a new deposit account",
                                                "label_joint": "We would like to set up a new deposit account"
                                            },
                                            {
                                                "id": "new_offset_account",
                                                "value": "new_offset_account",
                                                "label_single": "I would like to set up a new offset account on an existing eligble AMP home loan",
                                                "label_joint": "We would like to set up a new offset account on an existing eligible AMP home loan"
                                            },
                                            {
                                                "id": "convert_deposit_account",
                                                "value": "convert_deposit_account",
                                                "label_single": "I would like to convert an existing eligible deposit account",
                                                "label_joint": "We would like to convert an existing eligible deposit account"
                                            },
                                            {
                                                "id": "convert_offset_account",
                                                "value": "convert_offset_account",
                                                "label_single": "I would like to convert an existing eligible offset account",
                                                "label_joint": "We would like to convert an existing eligible offset account"
                                            }
                                        ]
                                    }
                                ],
                                "optionalBlocks": {
                                    "new_offset_account": {
                                        "name": "LoanOffset",
                                        "blockType": "LoanOffsetBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/loan-offset/loan-offset.component",
                                        "custom": {
                                            "blockTitle": "Offsetting your loan",
                                            "controls": [
                                                {
                                                    "id": "LoanOffsetAccountNumber"
                                                }
                                            ],
                                            "description_single": "Please enter the loan account number that you would like Bett3r to offset.",
                                            "description_joint": "Please enter the joint loan account number that you would like Bett3r to offset. Please note that both applicants must be holders of the loan."
                                        }
                                    },
                                    "convert_deposit_account": {
                                        "name": "DepositTransition",
                                        "blockType": "DepositTransitionBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/deposit-transition/deposit-transition.component",
                                        "custom": {
                                            "blockTitle": "Switching your account",
                                            "controls": [
                                                {
                                                    "id": "DepositTransitionAccountNumber",
                                                    "label": "Deposit Account Number"
                                                }
                                            ],
                                            "description_single": "When switching, your existing deposit account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend account to help manage your finances.",
                                            "description_joint": "When switching, your existing joint deposit account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend account to help manage your finances.",
                                            "additional_instruction": "Please enter the deposit account number that you would like to become your Bett3r Pay account."
                                        }
                                    },
                                    "convert_offset_account": {
                                        "name": "OffsetTransition",
                                        "blockType": "OffsetTransitionBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/offset-transition/offset-transition.component",
                                        "custom": {
                                            "blockTitle": "Switching your offset",
                                            "controls": [
                                                {
                                                    "id": "OffsetTransitionAccountNumber",
                                                    "label": "Offset Account Number"
                                                }
                                            ],
                                            "description_single": "When switching, your existing offset account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend offset account to help manage your finances.",
                                            "description_joint": "When switching, your existing joint offset account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend offset account to help manage your finances.",
                                            "additional_instruction": "Please enter the offset account number that you would like to become your Bett3r Pay account."
                                        }
                                    }
                                }
                            }
                        },
                        {
                            "name": "LastStepSection",
                            "blockType": "PageSectionComponent",
                            "blockLayout": "SECTION",
                            "commonBlock": true,
                            "path": "sections/page-section.component",
                            "custom": {
                                "label": "Last step"
                            },
                            "blocks": [
                                {
                                    "name": "LastStep",
                                    "blockType": "LastStepBlock",
                                    "blockLayout": "INLINE",
                                    "commonBlock": false,
                                    "path": "blocks/last-step/last-step.component",
                                    "custom": {
                                        "blockTitle": "Last step...",
                                        "controls": [
                                            {
                                                "id": "AcceptTandCs"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
