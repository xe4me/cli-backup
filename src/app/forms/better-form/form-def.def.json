                                    },
                                    "controls": [
                                        {
                                            "id": "userId",
                                            "label": "Username",
                                            "requiredMsg": "Username is a required field"
                                        },
                                        {
                                            "id": "password",
                                            "label": "Password",
                                            "requiredMsg": "Password is a required field"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                {
                    "blockType": "MenuFrameBlockComponent",
