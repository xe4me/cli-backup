                                            {
                                                "id": "convert_offset_account",
                                                "value": "convert_offset_account",
                                                "label_single": "I would like to convert an existing eligible offset account",
                                                "label_joint": "We would like to convert an existing eligible offset account"
                                            }
                                        ]
                                    }
                                ],
                                "optionalBlocks": {
                                    "new_offset_account": {
                                        "name": "LoanOffset",
                                        "blockType": "LoanOffsetBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/loan-offset/loan-offset.component",
                                        "custom": {
                                            "blockTitle": "Offsetting your loan",
                                            "controls": [
                                                {
                                                    "id": "LoanOffsetAccountNumber"
                                                }
                                            ],
                                            "description_single": "Please enter the loan account number that you would like Bett3r to offset.",
                                            "description_joint": "Please enter the joint loan account number that you would like Bett3r to offset. Please note that both applicants must be holders of the loan."
                                        }
                                    },
                                    "convert_deposit_account": {
                                        "name": "DepositTransition",
                                        "blockType": "DepositTransitionBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/deposit-transition/deposit-transition.component",
                                        "custom": {
                                            "blockTitle": "Switching your account",
                                            "controls": [
                                                {
                                                    "id": "DepositTransitionAccountNumber",
                                                    "label": "Deposit Account Number"
                                                }
                                            ],
                                            "description_single": "When switching, your existing deposit account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend account to help manage your finances.",
                                            "description_joint": "When switching, your existing joint deposit account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend account to help manage your finances.",
                                            "additional_instruction": "Please enter the deposit account number that you would like to become your Bett3r Pay account."
                                        }
                                    },
                                    "convert_offset_account": {
                                        "name": "OffsetTransition",
                                        "blockType": "OffsetTransitionBlock",
                                        "blockLayout": "INLINE",
                                        "commonBlock": false,
                                        "path": "blocks/offset-transition/offset-transition.component",
                                        "custom": {
                                            "blockTitle": "Switching your offset",
                                            "controls": [
                                                {
                                                    "id": "OffsetTransitionAccountNumber",
                                                    "label": "Offset Account Number"
                                                }
                                            ],
                                            "description_single": "When switching, your existing offset account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend offset account to help manage your finances.",
                                            "description_joint": "When switching, your existing joint offset account will become your Bett3r Pay account. We will also set up a Bett3r Save and Bett3r Spend offset account to help manage your finances.",
