[
    {
        "name": "PersonalDetailsSection",
        "blockType": "PageSectionComponent",
        "blockLayout": "SECTION",
        "commonBlock": true,
        "path": "sections/page-section.component",
        "custom": {
            "label": "Personal Details"
        },
        "blocks": [
            {
                "name": "BasicInfo",
                "blockType": "BasicInfoBlock",
                "blockLayout": "INLINE",
                "commonBlock": true,
                "path": "modules/amp-basic-info-block/components/amp-basic-info-block/amp-basic-info-block.component",
                "custom": {
                    "overrides": {
                        "controls[4].minAge": 18
                    }
                }
            },
            {
                "name": "Address",
                "blockType": "AddressBlock",
                "blockLayout": "INLINE",
                "commonBlock": false,
                "path": "blocks/address/address.component",
                "custom": {
                    "blockTitle": "And where you live...",
                    "controls": [
                        {
                            "id": "Address"
                        }
                    ]
                }
            },
            {
                "name": "ContactDetails",
                "blockType": "AmpContactDetailsBlockComponent",
                "blockLayout": "INLINE",
                "commonBlock": true,
                "path": "modules/amp-contact-details-block/components/amp-contact-details-block/amp-contact-details-block.component",
                "custom": {
                    "overrides": {
                        "controls[0].id": "EmailAddress",
                        "controls[1].id": "MobileNumber",
                        "controls[2].id": "HomeNumber"
                    }
                }
            }
        ]
    },
    {
        "name": "IdentitySection",
        "blockType": "PageSectionComponent",
        "blockLayout": "SECTION",
        "commonBlock": true,
        "path": "sections/page-section.component",
        "custom": {
            "label": "Identity"
        },
        "blocks": [
            {
                "name": "IdCheck",
                "blockType": "AmpGreenIdBlockComponent",
                "blockLayout": "INLINE",
                "commonBlock": true,
                "path": "modules/amp-greenid-block/components/amp-greenid-block/amp-greenid-block.component",
                "custom": {
                    "controls": [
                        {
                            "id": "AcceptIdentityCheckPrivacyDeclaration"
                        }
                    ],
                    "blockTitle": "Checking your ID",
                    "blockTitle_verified": "Thanks",
                    "blockTitle_unverified": "Your ID was unable to be verified",
                    "rootApplicantFDN":"Application.Applicant",
                    "titleFDN": "Section.PersonalDetailsSection.BasicInfo.Title.SelectedItem",
                    "firstNameFDN": "Section.PersonalDetailsSection.BasicInfo.FirstName",
                    "middleNamesFDN": "Section.PersonalDetailsSection.BasicInfo.MiddleName",
                    "lastNameFDN": "Section.PersonalDetailsSection.BasicInfo.LastName",
                    "dateOfBirthFDN": "Section.PersonalDetailsSection.BasicInfo.DateOfBirth",
                    "emailFDN": "Section.PersonalDetailsSection.contactDetails.EmailAddress",
                    "stateFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.state.SelectedItem",
                    "streetNameFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.streetName",
                    "flatNumberFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.unitNumber",
                    "streetNumberFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.streetNumber",
                    "suburbFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.suburb",
                    "postcodeFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.postCode",
                    "streetTypeFDN": "Section.PersonalDetailsSection.Address.Address.residentialAddress.manualAddress.streetType.SelectedItem"
                }
            }
        ]
    },
    {
        "name": "FinalQuestionsSection",
        "blockType": "PageSectionComponent",
        "blockLayout": "SECTION",
        "commonBlock": true,
        "path": "sections/page-section.component",
        "custom": {
            "label": "Final Questions"
        },
        "blocks": [
            {
                "name": "TaxFileNumber",
                "blockType": "TaxFileNumberBlock",
                "blockLayout": "INLINE",
                "commonBlock": false,
                "path": "blocks/tax-file-number/tax-file-number.component",
                "custom": {
                    "blockTitle": "Questions we need to ask...",
                    "controls": [
                        {
                            "id": "HasTaxFileNumber",
                            "buttons": [
                                {
                                    "id": "Yes",
                                    "value": true,
                                    "label": "Yes"
                                },
                                {
                                    "id": "No",
                                    "value": false,
                                    "label": "No"
                                }
                            ]
                        },
                        {
                            "id": "TaxFileNumber"
                        },
                        {
                            "id": "NoTaxFileNumberReason",
                            "options": [
                                {
                                    "value": "Children",
                                    "label": "Children"
                                },
                                {
                                    "value": "AgedServiceInvalidPensioner",
                                    "label": "Aged, Service or Invalid Pensioner"
                                },
                                {
                                    "value": "OtherExemptPensioner",
                                    "label": "Other exempt Pensioner"
                                },
                                {
                                    "value": "TaxReturnsNotRequired",
                                    "label": "Tax returns not required"
                                },
                                {
                                    "value": "ExemptForTFN",
                                    "label": "Exempt for TFN"
                                },
                                {
                                    "value": "TerritoryResident",
                                    "label": "Territory residents"
                                },
                                {
                                    "value": "NonResident",
                                    "label": "Non resident"
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "name": "SourceOfFunding",
                "blockType": "SourceOfFundingBlock",
                "blockLayout": "INLINE",
                "commonBlock": false,
                "path": "blocks/source-of-funding/source-of-funding.component",
                "custom": {
                    "blockTitle": "And a couple more...",
                    "controls": [
                        {
                            "id": "PrimarySourceOfWealth",
                            "options": [
                                {
                                    "value": "WBI",
                                    "label": "Business income"
                                },
                                {
                                    "value": "WIE",
                                    "label": "Income from employment (regular and/or bonus)"
                                },
                                {
                                    "value": "WII",
                                    "label": "Investment income (e.g. rent, dividends, pension)"
                                },
                                {
                                    "value": "WOO",
                                    "label": "One-off payment (e.g. matured investment, court settlement, redundancy, inheritance)"
                                },
                                {
                                    "value": "WSA",
                                    "label": "Sale of assets (e.g. shares, property)"
                                },
                                {
                                    "value": "WWF",
                                    "label": "Windfall (e.g. gift, lottery winnings, gambling)"
                                }
                            ]
                        },
                        {
                            "id": "SourceOfFundsForAccount",
                            "options": [
                                {
                                    "value": "FBF",
                                    "label": "Borrowed Funds"
                                },
                                {
                                    "value": "FBI",
                                    "label": "Business income"
                                },
                                {
                                    "value": "FGB",
                                    "label": "Government benefits (e.g. childcare rebate, family tax benefit)"
                                },
                                {
                                    "value": "FIE",
                                    "label": "Income from employment (regular and/or bonus)"
                                },
                                {
                                    "value": "FII",
                                    "label": "Investment income (e.g. rent, dividends, pension)"
                                },
                                {
                                    "value": "FOO",
                                    "label": "One-off payment (e.g. matured investment, court settlement, redundancy, inheritance)"
                                },
                                {
                                    "value": "FSA",
                                    "label": "Sale of assets (e.g. shares, property)"
                                },
                                {
                                    "value": "FWF",
                                    "label": "Windfall (e.g. gift, lottery winnings, gambling)"
                                }
                            ]
                        },
                        {
                            "id": "ReasonForOpeningAccount",
                            "options": [
                                {
                                    "value": "BI",
                                    "label": "Business income (e.g. regular deposits and withdrawals for expenses (mostly for non-individuals))"
                                },
                                {
                                    "value": "BW",
                                    "label": "Building wealth (e.g. large initial deposit, using investment returns to grow your wealth over time)"
                                },
                                {
                                    "value": "EB",
                                    "label": "Everyday banking (e.g. regular deposits and withdrawals for everyday expenses)"
                                },
                                {
                                    "value": "SAV",
                                    "label": "Savings (e.g. regular deposits with few withdrawals, earning interest to grow your balance)"
                                },
                                {
                                    "value": "PUR",
                                    "label": "Purchase / Refinance / Business growth / Acquisitions"
                                },
                                {
                                    "value": "IMP",
                                    "label": "Improvements / Construction / Business development / Progressive drawdowns"
                                },
                                {
                                    "value": "OTH",
                                    "label": "Other personal or business reasons / Day to day cash flow needs"
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "name": "Residency",
                "blockType": "ResidencyBlock",
                "blockLayout": "INLINE",
                "commonBlock": false,
                "path": "blocks/residency/residency.component",
                "custom": {
                    "blockTitle": "Nearly there...",
                    "controls": [
                        {
                            "id": "CountryOfCitizenship"
                        },
                        {
                            "id": "CountryOfResidency"
                        },
                        {
                            "id": "USTaxCitizen",
                            "buttons": [
                                {
                                    "id": "Yes",
                                    "value": true,
                                    "label": "Yes"
                                },
                                {
                                    "id": "No",
                                    "value": false,
                                    "label": "No"
                                }
                            ]
                        },
                        {
                            "id": "SSN"
                        },
                        {
                            "id": "TIN"
                        }
                    ],
                    "ssnRequiredMsg": "Either SSN or TIN is required."
                }
            },
            {
                "name": "LastStep",
                "blockType": "LastStepBlock",
                "blockLayout": "INLINE",
                "commonBlock": false,
                "path": "blocks/last-step/last-step.component",
                "custom": {
                    "blockTitle": "And lastly, to confirm...",
                    "controls": [
                        {
                            "id": "AcceptPrivacyDeclaration"
                        },
                        {
                            "id": "AcceptTandCs"
                        }
                    ],
                    "submitErrMsg" : "We are currently unable to process your application. Please try again later."
                }
            }
        ]
    }
]
